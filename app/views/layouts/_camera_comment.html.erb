<div class="modal fade" id="NewCameraComment">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(review, url: camera_reviews_path(camera), html: {id: "validate_id" }) do |f| %>
          <%= f.hidden_field :camera_id, value: camera.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <strong><%= f.label 'コメント' %></strong>
          <div id="emsg_name"></div>
          <%= f.text_area :review_text, class:'form-control validate[required, maxSize[200]]', cols:"10", style: 'height:300px;' %>
          <%= f.label '画像を選択' %>
          <label for="file" class="mt-2 fa fa-file-image-o fa-2x finger-selector">
            <%= f.attachment_field :review_image, style: "display:none;", id:"file" %>
          </label><br><br>
          <strong><%= f.label '評価をつける' %></strong> <p style="color: red">*半角数字0-5の間で入力してください</p>
          <%= f.number_field :rate, class:"form-control inline-block", min:"0", max:"5", maxlength:"1", style:"width:70px;" %> <strong>/ 5</strong>
      </div>
      <div class="modal-footer">
        <%= f.submit 'コメントする', class:"btn btn-warning" %>
        <% end %>
        <button type="button" class="btn btn-primary" data-dismiss="modal">閉じる</button>
       </div>
    </div>
  </div>
</div>
