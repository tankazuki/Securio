<div class="text-center">
  <%= render 'layouts/validation_error_messages', instance: @user %>
</div>
<div class="login-dark">
  <div>
    <h2 class="sr-only">Sign_Up Form</h2>
    <%= form_for @user, url: user_sign_up_path do |f| %>
      <div class="illustration">
        <i class="fa fa-user-plus"></i>
      </div>
      <%= f.text_field :nickname, class: 'form-control', placeholder: 'Nickname' %>
      <%= f.email_field :mail, class: 'form-control', placeholder:'Email' %>
      <%= f.text_field :password, class: 'form-control', placeholder:'Password' %>
      <%= f.text_field :password_confirmation, class: 'form-control', placeholder:'Password_confirmation' %>
      <div class="mt-3 mb-3 pl-4">
        <label for="file" class="fa fa-file-image-o fa-2x finger-selector">
          <%= f.attachment_field :user_image, style: "display:none;", id:"file" %>
        </label>
      </div>
      <%= f.submit class: 'btn btn-primary btn-block', value:"新規登録" %>
    <% end %>
  </div>
</div>
