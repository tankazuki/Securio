<table id="example" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th></th>
            <th>ユーザ名</th>
            <th>登録日</th>
            <th>最終ログイン時間</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
            <td>
              <% if user.user_image_id.present? %>
                <%= attachment_image_tag user , :user_image, style:"width: 40px; height: 40px" %>
              <% else %>
                <%= image_tag('no_image.png', style:"width: 40px; height: 40px") %>
              <% end %>
            </td>
            <td><%= user.nickname %></td>
            <td><%= simple_time(user.created_at) %></td>
            <td></td>
            <td>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#UserdeleteConfirmation_<%= user.id  %>">削除</button>
              <%= render partial: 'layouts/user_delete_modal', locals: { user: user } %>
            </td>
        </tr>
      <% end %>
    </tbody>
</table>
