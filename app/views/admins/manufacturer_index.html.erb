<table id="example" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>メーカー名</th>
            <th>登録日</th>
            <th>機種数</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <% manufacturer_count = Camera.where(manufacturer_id: manufacturer.id).count %>
        <tr>
            <td><%= manufacturer.manufacturer_name %></td>
            <td><%= simple_time(manufacturer.created_at) %></td>
            <td><%= manufacturer_count %></td>
            <td>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmation_<%= manufacturer.id  %>">削除</button>
              <%= render partial: 'layouts/manufacturer_delete_modal', locals: { manufacturer: manufacturer } %>
            </td>
        </tr>
      <% end %>
    </tbody>
</table>
